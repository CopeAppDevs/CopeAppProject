		<class-b>com.copeapp.dto.survey.AnswerDTO</class-b>
	</mapping>
	<mapping type="one-way" map-null="true" map-empty-string="true">
		<class-a>com.copeapp.dto.survey.SurveyDTO</class-a>
		<class-b>com.copeapp.entities.survey.Survey</class-b>
		<field-exclude type="one-way">
			<a>surveyId</a>
			<b>surveyId</b>
		</field-exclude>
		<field-exclude type="one-way">
			<a>voters</a>
			<b>voters</b>
		</field-exclude>
	</mapping>
	<mapping type="one-way" map-null="true" map-empty-string="true">
		<class-a>com.copeapp.entities.survey.Survey</class-a>
		<class-b>com.copeapp.dto.survey.SurveyMiniDTO</class-b>
	</mapping>
	<mapping type="one-way" stop-on-errors="true" map-null="true"
		map-empty-string="true">
		<class-a>com.copeapp.entities.survey.Survey</class-a>
		<class-b>com.copeapp.dto.survey.SurveyDTO</class-b>
	</mapping>
	<mapping>
		<class-a>com.copeapp.entities.common.Teacher</class-a>
		<class-b>com.copeapp.dto.commons.TeacherDTO</class-b>
		<field-exclude>
			<a>coordinatorOf</a>
			<b>coordinatorOf</b>
		</field-exclude>
		<field-exclude>
			<a>subjects</a>
			<b>subjects</b>
		</field-exclude>
		<field-exclude>
			<a>classi</a>
			<b>classi</b>
		</field-exclude>
	</mapping>
	<mapping>
		<class-a>com.copeapp.entities.common.Classe</class-a>
		<class-b>com.copeapp.dto.commons.ClasseDTO</class-b>
		<field-exclude>
			<a>students</a>
			<b>students</b>
		</field-exclude>
		<field-exclude>
			<a>rappresentanti</a>
			<b>rappresentanti</b>
		</field-exclude>
		<field-exclude>
			<a>teachers</a>
			<b>teachers</b>
		</field-exclude>
		<field-exclude>
			<a>coordinator</a>
			<b>coordinator</b>
		</field-exclude>
	</mapping>
	<mapping>
		<class-a>com.copeapp.entities.common.Student</class-a>
		<class-b>com.copeapp.dto.commons.StudentDTO</class-b>
	</mapping>
	<mapping type="bi-directional" map-null="true"
		map-empty-string="true">
		<class-a>com.copeapp.entities.common.Role</class-a>
		<class-b>com.copeapp.dto.commons.RoleDTO</class-b>
	</mapping>

	<mapping type="one-way">
		<class-a>com.copeapp.dto.survey.AnswerContentDTO</class-a>
		<class-b>com.copeapp.entities.survey.AnswerContent</class-b>
		<field-exclude>
			<a>answerContentId</a>
			<b>answerContentId</b>
		</field-exclude>
	</mapping>
	<mapping type="one-way">
		<class-a>com.copeapp.entities.survey.AnswerContent</class-a>
		<class-b>com.copeapp.dto.survey.AnswerContentDTO</class-b>
