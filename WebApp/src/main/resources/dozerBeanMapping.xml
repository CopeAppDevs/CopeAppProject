		<class-a>com.copeapp.dto.appunti.AppuntoDTO</class-a>
		<class-b>com.copeapp.entities.appunti.Appunto</class-b>
		<field-exclude type="one-way">
			<a>appuntoId</a>
			<b>appuntoId</b>
		</field-exclude>
	</mapping>
	<mapping type="one-way" stop-on-errors="true" map-null="true"
		map-empty-string="true">
		<class-a>com.copeapp.entities.appunti.Appunto</class-a>
		<class-b>com.copeapp.dto.appunti.AppuntoDTO</class-b>
