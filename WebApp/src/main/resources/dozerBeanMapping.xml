<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<stop-on-errors>true</stop-on-errors>
		<date-format>dd/MM/yyyy HH:mm:ss</date-format>
		<wildcard>true</wildcard>
	</configuration>
	<mapping><class-a>com.copeapp.entities.common.Subject</class-a><class-b>com.copeapp.dto.commons.SubjectDTO</class-b><field-exclude><a>teachers</a><b>teachers</b></field-exclude></mapping><mapping>
		<class-a>com.copeapp.entities.common.Teacher</class-a>
		<class-b>com.copeapp.dto.commons.UserDTO</class-b>
	</mapping>
	<mapping>
		<class-a>com.copeapp.entities.common.Student</class-a>
		<class-b>com.copeapp.dto.commons.UserDTO</class-b>
		<field-exclude>
			<a map-get-method="getUserId">classe</a><b>userId</b>
		</field-exclude>
	</mapping>
	<mapping>
		<class-a>com.copeapp.entities.common.User</class-a>
		<class-b>com.copeapp.dto.commons.UserDTO</class-b>
	</mapping>
	<mapping map-null="true" map-empty-string="true"
